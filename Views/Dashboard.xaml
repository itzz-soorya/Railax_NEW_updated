<UserControl x:Class="UserModule.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Background="#F7F7F7"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             MinHeight="600" 
             MinWidth="800">

    <UserControl.Resources>
        <!-- Header Button Style -->
        <Style TargetType="Button" x:Key="HeaderButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded TextBox with Watermark Style -->
        <Style TargetType="TextBox" x:Key="RoundedWatermarkTextBoxStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style TargetType="RadioButton" x:Key="ToggleButtonStyle">
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                        CornerRadius="6"
                        Padding="12,8"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Hover effect only -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="FloralWhite"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Button Style for Scan and Add Booking -->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader" x:Key="DataGridHeaderStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4F5E80"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="800" MinHeight="600">
        <!-- Main Content -->
        <Grid Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Greeting Box -->
            <Border Background="#232323" CornerRadius="8" Padding="20"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch" MinHeight="80" MinWidth="300" >
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Logo with rounded corners -->
                    <Border Grid.Column="0" 
                            CornerRadius="8" 
                            Width="60" 
                            Height="60" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            ClipToBounds="True">
                        <Image Source="/assests/Logo.png" 
                               Stretch="UniformToFill"
                               Width="60"
                               Height="60"/>
                    </Border>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="GreetingTextBlock"
                                   Text="Good morning, User"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Image Width="16" Height="16" Margin="0,0,8,0" Source="/Assets/Images/calendar.png"/>
                            <TextBlock x:Name="DateTextBlock" Foreground="White" FontSize="14" Margin="0,0,0,2" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons - Right Aligned -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <!-- Internet Status Indicator -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0" ToolTip="Internet Connection Status">
                            <Ellipse x:Name="InternetStatusDot" 
                                     Width="12" Height="12" 
                                     Fill="Gray"
                                     Stroke="White"
                                     StrokeThickness="1"/>
                            <TextBlock x:Name="InternetStatusText" 
                                       Text="Checking..." 
                                       Foreground="White" 
                                       FontSize="11" 
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel>

                            <!-- Container for dynamic content -->

                            <!-- Container for dynamic content -->

                            <!-- Container for dynamic content -->
                            <Button x:Name="ScanButton"
                          Style="{StaticResource ActionButtonStyle}"
                          Background="Black" Margin="0,0,0,0"
                          Height="37" MinWidth="140"
                          Click="ScanButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Images/Scan.png" Width="35" Height="35" Margin="0,0,10,0"/>
                                    <TextBlock Text="Scan" Margin="0,6,8,0" FontSize="16" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Button>
                        </StackPanel>


                        <!-- Placeholder where UserControl will load -->
                        <ContentControl x:Name="MainContentArea"/>

                        <Button x:Name="AddBookingButton"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#E8F2FF" Foreground="#1E71FB"
                                MinWidth="120" Click="AddBookingButton_Click">
                            <TextBlock Text="+ Add Booking" FontSize="14" TextTrimming="CharacterEllipsis" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Card -->
            <Border Background="White" CornerRadius="10" Margin="0,110,0,0" Padding="20"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        MinHeight="400" MinWidth="400">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search & Filters Row -->
                    <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <!-- Search Bar expands -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Filter Buttons -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Seat Count fits content -->
                            <ColumnDefinition Width="2*" />
                            <!-- Toggle Buttons expand -->
                        </Grid.ColumnDefinitions>

                        <!-- Search Bar -->
                        <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    MinHeight="36"
                    HorizontalAlignment="Stretch">
                            <Grid>
                                <TextBox x:Name="SearchTextBox"
                             VerticalContentAlignment="Center"
                             Padding="36,0,12,0"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             MinWidth="150"
                             Text="" TextChanged="SearchTextBox_TextChanged"/>
                                <Image Source="/Assets/Images/Search.png"
                           Width="16"
                           Height="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False"/>
                            </Grid>
                        </Border>

                        <!-- Filter Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center">
                            <Button x:Name="btnAllFilter" Content="All" 
                                    Width="70" Height="32" 
                                    Background="#232323" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Margin="0,0,6,0"
                                    Cursor="Hand"
                                    Click="FilterAll_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnActiveFilter" Content="Active" 
                                    Width="70" Height="32" 
                                    Background="#E0E0E0" 
                                    Foreground="#333333"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Margin="0,0,6,0"
                                    Cursor="Hand"
                                    Click="FilterActive_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnCompletedFilter" Content="Completed" 
                                    Width="90" Height="32" 
                                    Background="#E0E0E0" 
                                    Foreground="#333333"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="FilterCompleted_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Status and Type Counts - Will be populated dynamically -->
                        <StackPanel x:Name="CountsPanel" Grid.Column="2" Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Active Count -->
                            <Border Background="#E8F5E9" Padding="6,4" CornerRadius="16" Margin="0,0,6,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="✓" Foreground="#4CAF50" FontWeight="Bold" FontSize="12" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="ActiveTextBlock" Text="Active: 0" Foreground="#4CAF50" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <!-- Completed Count -->
                            <Border Background="#FFF3E0" Padding="6,4" CornerRadius="16" Margin="0,0,6,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="✓" Foreground="#FF9800" FontWeight="Bold" FontSize="12" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="CompletedTextBlock" Text="Completed: 0" Foreground="#FF9800" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <!-- Dynamic booking type counts will be added here in code-behind -->
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="BookingDataGrid" 
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserReorderColumns="False"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        SelectionMode="Extended"
                        IsHitTestVisible="True"
                        Focusable="False"
                        RowHeight="NaN"
                        ColumnHeaderHeight="40"
                        GridLinesVisibility="None"
                        BorderThickness="0"
                        Background="#FAFBFF"
                        Margin="10,54,-2,-54"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Bookings}">

                        <!-- Remove grid lines & borders -->
                        <DataGrid.Resources>
                            <!-- Cell Style -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Row Style -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Column Header Style -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="#F0F3FF"/>
                                <!-- Whole header background -->
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Columns -->
                        <DataGrid.Columns>
                            <!-- Booking Id -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                        <Image Source="/assests/Booking.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Booking Id" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding booking_id}" FontSize="13"
                               HorizontalAlignment="Center"
                               TextAlignment="Center" Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Name -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Person.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Name" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding guest_name}" FontSize="13"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"  Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Phone No -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Phone.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Phone No" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding phone_number}" FontSize="13"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"  Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Seat Type -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Group.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Seat Type" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding booking_type}" FontSize="13"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Start Time -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Start Time" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding in_time, StringFormat=hh\\:mm}" FontSize="13"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- End Time -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="End Time" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding out_time, StringFormat=hh\\:mm}" FontSize="13"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Width="*" IsReadOnly="True" CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Vector.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Status" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding status}" FontSize="13"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" Margin="0,20,0,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Container for dynamic content - Overlays everything -->
                    <Grid x:Name="ContentGrid" 
                          Grid.Row="0"
                          Grid.RowSpan="2"
                          Background="#F0F0F0"
                          Visibility="Collapsed"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Panel.ZIndex="100"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>